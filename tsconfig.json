{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./node_modules/@prisma/client"],
    "types": ["node"],
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@styles": ["app/styles/globals.css"],
      "@components/*": ["components/*"],
      "@lib/*": ["lib/*"],
      "@db": ["lib/db/prisma"],
      "@utils/*": ["lib/utils/*"],
      "@schemas/*": ["lib/schemas/*"],
      "@tv/*": ["lib/tv/*"],
      "@configs/*": ["configs/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
